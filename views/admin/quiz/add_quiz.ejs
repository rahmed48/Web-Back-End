<div
  class="tab-pane fade"
  id="add-item"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/quiz" method="POST">
        <div class="form-group">
          <label for="name">Judul Materi</label>
          <select class="form-control" name="materiId">
            <option value="">Judul Materi</option>
            <% for(let i = 0 ; i < materi.length ; i++) { %>
            <option value="<%= materi[i].id %>"><%= materi[i].title %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="question">Soal</label>
          <textarea name="question" id="question" class="form-control" required>
          </textarea>
        </div>
        <div class="form-group">
          <label for="judul">Pilihan Jawaban A</label>
          <input type="text" class="form-control" id="a" name="a" required />
        </div>
        <div class="form-group">
          <label for="judul">Pilihan Jawaban B</label>
          <input type="text" class="form-control" id="b" name="b" required />
        </div>
        <div class="form-group">
          <label for="judul">Pilihan Jawaban C</label>
          <input type="text" class="form-control" id="c" name="c" required />
        </div>
        <div class="form-group">
          <label for="judul">Pilihan Jawaban D</label>
          <input type="text" class="form-control" id="d" name="d" required />
        </div>

        <div class="form-group">
          <label for="correct_option">Jawaban Yang Benar</label>
          <input type="text" class="form-control" id="correct_option" name="correct_option" required />
        </div>

        <button class="btn btn-primary" type="submit">Save</button>
      </form>
    </div>
  </div>
</div>
