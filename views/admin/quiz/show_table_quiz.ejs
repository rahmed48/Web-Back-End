<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No</th>
              <th>Judul Materi</th>
              <th>Soal</th>
              <th>Pilihan Jawaban</th>
              <th>Option</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < quiz.length; i++) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= quiz[i].materiId.title %></td>
              <td><%= quiz[i].question %></td>
              <td>
                A.<%= quiz[i].options[0] %> | B.<%= quiz[i].options[1] %> | C.<%=
                quiz[i].options[2] %> | D.<%= quiz[i].options[3] %>
              </td>
              <td>
                <form
                  action="/admin/quiz/<%=quiz[i].id%>?_method=DELETE"
                  method="POST"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-circle btn-sm"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
